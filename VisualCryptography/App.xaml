<Application x:Class="Kryptografia_wizualna.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Kryptografia_wizualna"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style  TargetType="Button">
            <Setter Property="Height" Value="30" />
            <Setter Property="Background" Value="#FF0068FF"/>
            <Setter Property="BorderBrush" Value="{x:Null}" />
            <Setter Property="Foreground" Value="#FFFDF4F4"/>
            <Setter Property="Width" Value ="75" />
            <Setter Property="Height" Value ="25" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>
        <Style TargetType="Label">
            <Setter Property="Height" Value="30" />
            <Setter Property="Foreground" Value="#FF0068FF" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontStyle" Value="Italic" />
        </Style>
       
      
    </Application.Resources>
</Application>
